@model Urun
<form method="post" action="/Urun/Ekle">
    <div class="form-group">
        <label class="form-label">Ad</label>
        <input asp-for="Ad" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label class="form-label">Açıklama</label>
        <input asp-for="Aciklama" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label class="form-label">Fiyat</label>
        <input asp-for="Fiyat" type="number" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="BoykotDurumu" class="form-check-input" type="checkbox" checked>
        <label class="form-check-label">
            Boykot Durumu
        </label>
    </div>

    <div class="btn-group">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a href="/Home/Index" class="btn btn-secondary">İptal</a>
    </div>
</form>