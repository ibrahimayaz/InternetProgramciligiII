@model Kitap
<form asp-action="Ekle" asp-controller="Kitap" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="ISSN"></label>
        <input class="form-control" type="text" asp-for="ISSN" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Ad"></label>
        <input class="form-control" type="text" asp-for="Ad" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Yazar"></label>
        <input class="form-control" type="text" asp-for="Yazar" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ResimYolu"></label>
        <input class="form-control" type="text" asp-for="ResimYolu" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Fiyat"></label>
        <input class="form-control" type="number" asp-for="Fiyat" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="SayfaSayisi"></label>
        <input class="form-control" type="number" asp-for="SayfaSayisi" />
    </div>
    <div class="mb-3 btn-group">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">İptal</a>
    </div>
</form>